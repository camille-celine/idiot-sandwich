<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @recipes.each do |recipe| %>
    <div class="col">
      <div class="card">
        <%= cl_image_tag recipe.photo.key, class: "card-image", crop: :fill %>
        <div class="card-body">
          <h5 class="card-title"><%= recipe.name %></h5>
          <p class="card-text"><%= recipe.description %> </p>
          <%= link_to "See recipe", recipe, class: "btn btn-sm card-button" %>
          <% if policy(recipe).destroy? %>
            <%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure you want to delete this event?' }, class: "btn btn-sm card-button"%>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>