<div class="container mt-4">

  <%= form_tag recipes_path, class: "form-horizontal pr-0", method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a recipe" %>
    <%= submit_tag "Search", class: "btn btn-success ml-3" %>
  <% end %>

  <h2>All recipes</h2>
  <div class="container-cards">
    <% @recipes.each do |recipe| %>
      <div class="card">
        <%= recipe.name %>
        <%= link_to "See recipe", recipe %>
        <% if policy(recipe).destroy? %>
          <%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure you want to delete this event?' }%>
        <% end %>
      </div>
    <% end %>
   </div>
</div>
