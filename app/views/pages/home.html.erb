<div class="container">

<%= form_tag recipes_path, class: "form-horizontal pr-0", method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a recipe" %>
  <%= submit_tag "Search", class: "btn btn-success ml-3" %>
<% end %>


  <h2>Recipes</h2>
  <p><%= link_to "See all recipes", recipes_path%></p>
  <% if policy(Recipe).create? %>
      <p><%= link_to "Create a recipe", new_recipe_path %></p>
  <% end %>
</div>